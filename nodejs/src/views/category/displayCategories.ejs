<table>
  <thead>
      <tr>
          <th>ID</th>
          <th>Tên thể loại</th>
          <th>Actions</th>
      </tr>
  </thead>
  <tbody>
      <% categories.forEach((category) => { %>
          <tr>
              <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td>
                <a href="/categories/edit?id=<%= category.id %>">Sửa</a> |
                <form action="/categories/delete" method="POST" style="display:inline;">
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <button type="submit" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">Xóa</button>
                </form>
              </td>
          </tr>
      <% }) %>
  </tbody>
</table>

<!-- Nút Thêm Mới -->
<div style="margin-top: 20px;">
    <a href="/categories/create" class="btn btn-primary">Thêm Mới</a>
</div>
