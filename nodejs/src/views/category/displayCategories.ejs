<!-- views/category/displayCategories.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Danh Sách Danh Mục</title>
</head>
<body>
    <h1>Danh Sách Danh Mục</h1>
    <!-- Nút Thêm Danh Mục -->
    <a href="/category/create" style="margin-bottom: 20px; display: inline-block;">Thêm Danh Mục Mới</a>
    <br>
    <table border="1" cellspacing="0" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Danh Mục</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <td><%= category.id %></td>
                    <td><%= category.name %></td>
                    <td>
                        <!-- Nút Sửa -->
                        <a href="/category/edit?id=<%= category.id %>">Sửa</a> | 
                        
                        <!-- Form Xóa -->
                        <form action="/category/delete" method="POST" style="display:inline;">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button type="submit" onclick="return confirm('Bạn chắc chắn muốn xóa?')">Xóa</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
